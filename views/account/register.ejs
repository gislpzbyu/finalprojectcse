<h1><%= title %></h1>
<div style="display: flex; justify-content: center;">
    <% if (messages && messages.error) { %>
        <ul style="color: red; list-style: none; padding: 0;">
            <% messages.error.forEach(msg => { %>
                <li><%= msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <!--    <div style="display: flex; justify-content: center;">-->
    <form action="/account/register" method="post">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required placeholder="Enter your first name"><br>

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required
               placeholder="Enter your last name"><br>

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required
               placeholder="Enter a valid email address"><br>

        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required minlength="12"
               pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
               title="Must contain at least one number, one uppercase letter, and one special character."
               placeholder="Enter a secure password"><br>
        <small>Passwords must be at least 12 characters and include at least 1 number, 1 uppercase letter, and 1 special
            character.</small><br>

        <button type="submit">Register</button>
    </form>

</div>