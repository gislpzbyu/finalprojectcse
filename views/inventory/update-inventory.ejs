<h1>Actualizar Vehículo</h1>

<div class="centered">

    <%- messages() %>

    <form action="/inv/update-inventory/<%= inventoryItem.inv_id %>" method="post">
        <label for="inv_make">Marca:</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= inventoryItem.inv_make %>"><br>

        <label for="inv_model">Modelo:</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= inventoryItem.inv_model %>"><br>

        <label for="inv_year">Año:</label>
        <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}" value="<%= inventoryItem.inv_year %>"><br>

        <label for="inv_description">Descripción:</label>
        <textarea id="inv_description" name="inv_description" required><%= inventoryItem.inv_description %></textarea><br>

        <label for="inv_image">Ruta de la Imagen:</label>
        <input type="text" id="inv_image" name="inv_image" required value="<%= inventoryItem.inv_image %>"><br>

        <label for="inv_thumbnail">Ruta del Thumbnail:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inventoryItem.inv_thumbnail %>"><br>

        <label for="inv_price">Precio:</label>
        <input type="number" id="inv_price" name="inv_price" required min="0" step="0.01" value="<%= inventoryItem.inv_price %>"><br>

        <label for="inv_miles">Millas:</label>
        <input type="number" id="inv_miles" name="inv_miles" required min="0" value="<%= inventoryItem.inv_miles %>"><br>

        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" required value="<%= inventoryItem.inv_color %>"><br>

        <label for="classification_">Clasificación:</label>
        <select id="classification_" name="classification_" required>
            <option value="" disabled>Selecciona una clasificación</option>
            <% classifications.forEach(function(classification) { %>
                <option value="<%= classification.classification_id %>" <%= classification.classification_id === inventoryItem.classification_id ? 'selected' : '' %>>
                    <%= classification.classification_name %>
                </option>
            <% }); %>
        </select><br>

        <button type="submit">Actualizar Vehículo</button>
    </form>

</div>
